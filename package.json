{
  "name": "react-playground",
  "version": "0.0.1",
  "description": "project is aimed to study react stack",
  "author": "Rodionov Maxim <rodionov.m.m@gmail.com>",
  "license": "MIT",
  "scripts": {
    "app:build": "BUILD_MODE=production webpack",
    "app:start": "webpack-dev-server",
    "app:serve": "./devtools/serve.js",
    "eslint:base": "eslint --format=codeframe --max-warnings=0 --ext=js,ts,tsx",
    "eslint:all": "run-s -ln 'eslint:base ./'",
    "stylelint:base": "stylelint -f unix",
    "stylelint:all": "run-s -ln 'stylelint:base src/**/*.scss'",
    "js-type-check:base": "tsc --skipLibCheck --allowJs --checkJs --noEmit",
    "js-type-check:all": "npm run js-type-check:base ./*.js ./.*.js ./src/.*.js",
    "lint:all": "run-p -ln eslint:all stylelint:all js-type-check:all",
    "prettier:fix": "prettier --check --write './*.js'",
    "jest:watch": "jest --watch",
    "jest": "jest --coverage",
    "testcafe:prod": "E2E_MODE=prod testcafe --app 'npm run app:serve'",
    "testcafe:live": "E2E_MODE=dev testcafe chrome --live",
    "depcruise:validate": "depcruise --config .dependency-cruiser.js src",
    "depcruise:graph": "depcruise --config .dependency-cruiser.js --output-type dot src | dot -T svg > docs/graph.svg",
    "pre-commit": "run-p -ln lint:all",
    "pre-push": "run-s -ln pre-push:stage-1 pre-push:stage-2",
    "pre-push:stage-1": "run-p -ln lint:all app:build jest",
    "pre-push:stage-2": "run-p -ln testcafe:prod depcruise:validate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run pre-push"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": "prettier --write",
    "*.{scss,css}": [
      "prettier --write",
      "npm run stylelint:base"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run eslint:base"
    ],
    "*.js": [
      "prettier --write",
      "npm run eslint:base",
      "npm run js-type-check:base"
    ]
  },
  "browserslist": [
    "last 3 version"
  ],
  "dependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.1",
    "react-router5": "8.0.1",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-observable": "1.2.0",
    "redux-router5": "8.0.1",
    "router5": "8.0.1",
    "router5-plugin-browser": "8.0.1",
    "rxjs": "6.6.3",
    "tslib": "2.0.3"
  },
  "devDependencies": {
    "@testing-library/react": "11.1.0",
    "@types/eslint": "7.2.3",
    "@types/html-webpack-plugin": "3.2.3",
    "@types/jest": "26.0.15",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/prettier": "2.1.5",
    "@types/react": "16.9.53",
    "@types/react-dom": "16.9.8",
    "@types/react-redux": "7.1.9",
    "@types/stylelint": "9.10.1",
    "@types/webpack": "4.41.23",
    "@types/webpack-dev-server": "3.11.0",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "4.4.0",
    "autoprefixer": "9.8.6",
    "css-loader": "4.3.0",
    "css-mqpacker": "7.0.0",
    "cssnano": "4.1.10",
    "dependency-cruiser": "9.15.1",
    "eslint": "7.10.0",
    "eslint-plugin-react": "7.21.3",
    "factory-t": "0.3.0",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.0",
    "jest": "26.5.3",
    "lint-staged": "10.4.0",
    "mini-css-extract-plugin": "0.11.3",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "postcss-loader": "4.0.3",
    "prettier": "2.1.2",
    "sass-loader": "10.0.2",
    "serve-handler": "6.1.3",
    "style-loader": "1.3.0",
    "stylelint": "13.7.2",
    "stylelint-config-recommended": "3.0.0",
    "testcafe": "1.9.4",
    "ts-jest": "26.4.1",
    "ts-loader": "8.0.4",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  }
}
