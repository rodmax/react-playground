{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "checkJs": false,
    "sourceMap": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "types": ["jest"],
    "paths": {
      "app/*": ["src/app/*"],
      "common/*": ["src/common/*"],
      "modules/*": ["src/modules/*"],
      "api/*": ["src/api/*"]
    },
    "lib": ["es2015", "es2017", "dom", "dom.iterable", "esnext"]
  },
  "include": ["src/*.ts", "src/*.tsx", "src/**/*.ts", "src/**/*.tsx"]
}
