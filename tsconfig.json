{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "checkJs": false,
    "sourceMap": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "types": ["jest"],
    "lib": ["es2015", "es2017", "dom", "dom.iterable", "esnext"]
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/modules/core/i18n/translations/*.json"
  ]
}
